Vegetarian = input('vegetarian? (y/n)')
Vegan = input('are you a vegan?(y/n)')
Gluten_free = input('Is anyone in your party gluten-free?(y/n)')
print("These are some of your choices:")
if Vegetarian == "yes":
    if Vegan == "yes":
        if Gluten_free == "yes":
            print("Veggizz")
    else:
        if Vegan == "no":
            if Gluten_free == "yes":
                print("Pizza hut")
                print("Veggizz")
            else:
                if Gluten_free == "no":
                    print("Pizza hut")
                    print("Italian Restaurant")
                    print("Veggizz")
else:
    if Vegetarian == "no":
        if Vegan == 'no':
            if Gluten_free == 'no':
                print("Meat House")
                print("Pizza hut")
                print("Italian Restaurant")
                print("Veggizz")
            else:
                if Gluten_free == 'yes':
                    print("Pizza hut")
                    print("Veggizz")
        if Vegan == 'yes':
            if Gluten_free == 'no':
                print("Veggizz")
            else:
                if Gluten_free == 'yes':
                    print("Veggizz")
